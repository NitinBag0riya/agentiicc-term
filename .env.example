# Server Configuration
PORT=3000
# ENCRYPTION_KEY must be 32 bytes (64 hex characters)
ENCRYPTION_KEY=your_encryption_key_here

# Database (Supabase Transaction Pooler URL recommended)
DATABASE_URL=postgres://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true
# Direct connection for migrations (optional but good to have)
DIRECT_URL=postgres://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase Auth & API (Optional if using direct DB connection only)
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis (Optional - for production sessions)
# Leave empty or use Upstash URL for cloud-only
REDIS_URL=

# Exchange API Credentials (for testing/default)
ASTER_BASE_URL=https://api.aster.org
ASTER_API_KEY=
ASTER_API_SECRET=

HYPERLIQUID_ADDRESS=
HYPERLIQUID_PRIVATE_KEY=

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
WEBHOOK_URL=https://your-app-url.com
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=your_webhook_secret
MINI_APP_URL=https://t.me/your_bot/app

# Disable SSL for local dev if needed (set to true if connecting to local DB, false for cloud)
SSL_DISABLED=false
